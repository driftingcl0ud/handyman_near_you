<div class="container">
<!-- Background image -->
<div class="bg-image"></div>
	<div class="big-body">
	<div class="container-body">  
	<% if @handyman.user.photo.attached? %>
	  <div class="photo" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @handyman.user.photo.key, crop: :fill %>')"></div>
    <% end %>
	  <h1 class="name mt-5"><%= @handyman.user.first_name %> <%= @handyman.user.last_name %></h2>
	   <div class="d-flex justify-content-center"><div class="container-job"> <span> 🛠 <%= @handyman.job_title %></span> </div></div>
		<div class="big-box">
			<div class="description ">
				<p><%= @handyman.description %></p>
				<p> 📍 <%= @handyman.user.address %> </p>
				<p> ✅  Missions Completed : <strong><%=  @handyman.user.mission_ids.count %></strong> </p>
				<p> ⭐️ Ratings : <strong> 5/5 </strong>
				<div><%= link_to "Propose a mission", new_handyman_mission_path(@handyman),class:'btn btn-orange btn-large' %></div>
			</div>
			<div class="image">
				<div class="d-flex justify-content-between">
					<%= image_tag "pic1.jpg", height: "122", class:"small-image-show" %>
					<%= image_tag "pic2.jpg", height: "122", class:"small-image-show" %>
				</div>
				<%= image_tag "pic3.jpg", height: "122", class:"large-image-show" %>
				<%= image_tag "pic4.jpg", height: "122", class:"large-image-show" %>
				
			</div>
		</div>
	</div>
   </div>
</div>